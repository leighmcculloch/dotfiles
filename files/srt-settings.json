{
  "network": {
    "allowedDomains": [
      "github.com",
      "*.github.com",
      "api.github.com",
      "lfs.github.com",
      "github-cloud.githubusercontent.com",
      "objects.githubusercontent.com",
      "api.githubcopilot.com",
      "copilot-proxy.githubusercontent.com",
      "opencode.ai",
      "api.anthropic.com",
      "generativelanguage.googleapis.com",
      "api.x.ai",
      "*.api.x.ai",
      "api.perplexity.ai",
      "mcp.deepwiki.com",
      "api.upstash.com",
      "*.upstash.io",
      "api.pushover.net",
      "registry.npmjs.org",
      "*.npmjs.org",
      "deno.land",
      "*.deno.land",
      "esm.sh"
    ],
    "deniedDomains": [],
    "allowUnixSockets": [],
    "allowLocalBinding": false
  },
  "filesystem": {
    "denyRead": [
      "~/.ssh",
      "~/.zenv_apikey_*",
      "~/Desktop/",
      "~/Documents/",
      "~/Filing*/",
      "~/Library/"
    ],
    "allowWrite": [
      ".",
      "/tmp",
      "~/.local/share/opencode"
    ],
    "denyWrite": [
      ".env"
    ]
  },
  "ignoreViolations": {},
  "enableWeakerNestedSandbox": false
}

{
  "network": {
    "allowedDomains": [
      "github.com",
      "*.github.com",
      "api.github.com"
    ],
    "deniedDomains": [],
    "allowUnixSockets": [],
    "allowLocalBinding": false
  },
  "filesystem": {
    "denyRead": [
      "~/.ssh",
      "~/.zenv_apikey_*"
    ],
    "allowWrite": [
      ".",
      "/tmp"
    ],
    "denyWrite": [
      ".env",
      "config/production.json"
    ]
  },
  "ignoreViolations": {
    "*": [
      "/usr/bin",
      "/System"
    ],
    "git push": ["/usr/bin/nc"],
    "npm": ["/private/tmp"]
  },
  "enableWeakerNestedSandbox": false
}

#!/usr/bin/env bash

set -o errexit
set -o pipefail
set -o nounset

me="$(basename "$0")"

{
  if ! [ -f $LOCAL_BIN/gotestsum ] ; then
    echo -e "\e[1;32mInstalling '$me' on first use...\e[0m"

    go install gotest.tools/gotestsum@latest

    echo -e "\e[1;32mFinished installing '$me'.\e[0m"
  fi
} 1>&2

"$me" "$@"

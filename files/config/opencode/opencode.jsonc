{
  "$schema": "https://opencode.ai/config.json",
  "theme": "ghostty",
  "enabled_providers": [
    "github-copilot"
  ],
  "model": "github-copilot/claude-opus-4.5",
  "small_model": "github-copilot/gpt-5.2-codex",
  "default_agent": "plan",
  "autoupdate": false,
  "watcher": {
    "ignore": ["target/", "node_modules/**", "dist/**", ".git/**"]
  },
  "compaction": {
    "auto": true,
    "prune": true
  },
  "share": "disabled",
  "permission": {
    "context7_resolve-library-id": "allow",
    "context7_get-library-docs": "allow",
    "deepwiki_read_wiki_structure": "allow",
    "deepwiki_read_wiki_contents": "allow",
    "deepwiki_ask_question": "allow",
    "github_get_commit": "allow",
    "github_get_file_contents": "allow",
    "github_get_me": "allow",
    "github_get_tag": "allow",
    "github_issue_read": "allow",
    "github_list_branches": "allow",
    "github_list_commits": "allow",
    "github_list_issues": "allow",
    "github_list_pull_requests": "allow",
    "github_pull_request_read": "allow",
    "github_search_code": "allow",
    "github_search_issues": "allow",
    "github_search_pull_requests": "allow",
    "perplexity_perplexity_ask": "allow",
    "webfetch": "allow",
    "websearch": "allow",
    "edit": "allow",
    "bash": {
      "git fetch": "allow",
      "git grep": "allow",
      "git diff": "allow",
      "git log": "allow",
      "git show": "allow",
      "git branch": "allow",
      "git remote": "allow",
      "git tag": "allow",
      "git config --get": "allow",
      "git config --list": "allow",
      "git rev-parse": "allow",
      "git describe": "allow",
      "git blame": "allow",
      "gh pr view": "allow",
      "gh pr checks": "allow",
      "gh pr diff": "allow",
      "gh pr list": "allow",
      "gh pr status": "allow",
      "gh issue view": "allow",
      "gh issue list": "allow",
      "gh issue status": "allow",
      "gh repo view": "allow",
      "gh repo list": "allow",
      "gh repo clone": "allow",
      "gh run view": "allow",
      "gh run list": "allow",
      "gh run watch": "allow",
      "gh workflow list": "allow",
      "gh workflow view": "allow",
      "gh release view": "allow",
      "gh release list": "allow",
      "gh browse": "allow",
      "gh search": "allow",
      "gh gist view": "allow",
      "gh gist list": "allow",
      "cargo --version": "allow",
      "cargo check": "allow",
      "cargo doc": "allow",
      "cargo init": "allow",
      "cargo update": "allow",
      "cargo build": "allow",
      "cargo test": "allow",
      "cargo tree": "allow",
      "cargo metadata": "allow",
      "cargo pkgid": "allow",
      "cargo verify-project": "allow",
      "cargo info": "allow",
      "rustc --version": "allow",
      "go build": "allow",
      "go test": "allow",
      "go mod tidy": "allow",
      "go get": "allow",
      "go list": "allow",
      "go doc": "allow",
      "go vet": "allow",
      "go version": "allow",
      "go env": "allow",
      "go mod graph": "allow",
      "go mod why": "allow",
      "deno add": "allow",
      "deno check": "allow",
      "deno doc": "allow",
      "deno info": "allow",
      "deno run": "allow",
      "deno task": "allow",
      "deno test": "allow",
      "deno --version": "allow",
      "npm list": "allow",
      "npm view": "allow",
      "npm search": "allow",
      "npm outdated": "allow",
      "npm config list": "allow",
      "npm config get": "allow",
      "npm explain": "allow",
      "npm ls": "allow",
      "npm why": "allow",
      "node --version": "allow",
      "curl": "allow",
      "grep": "allow",
      "ls": "allow",
      "mkdir": "allow",
      "touch": "allow",
      "cat": "allow",
      "head": "allow",
      "tail": "allow",
      "wc": "allow",
      "find": "allow",
      "which": "allow",
      "whereis": "allow",
      "diff": "allow",
      "sort": "allow",
      "uniq": "allow",
      "cut": "allow",
      "jq": "allow",
      "yq": "allow",
      "tree": "allow",
      "stat": "allow",
      "file": "allow",
      "realpath": "allow",
      "dirname": "allow",
      "basename": "allow",
      "pwd": "allow",
      "date": "allow",
      "uname": "allow",
      "du": "allow",
      "df": "allow",
      "stellar version": "allow",
      "stellar xdr decode": "allow",
      "stellar xdr types": "allow",
      "stellar network list": "allow",
      "stellar keys address": "allow",
      "stellar keys ls": "allow",
      "stellar contract info": "allow",
      "stellar contract read": "allow",
      "stellar-xdr": "allow",
      "stellar-strkey": "allow",
      "git push --force": "deny",
      "git push -f": "deny",
      "git push --force-with-lease": "deny",
      "git commit --amend": "deny"
    }
  },
  "mcp": {
    "github": {
      "type": "local",
      "command": ["bash", "-c", "source ~/.zenv_apikey_github || source ~/.zenv_apikey_github_ro ; GITHUB_PERSONAL_ACCESS_TOKEN=\"$GITHUB_TOKEN\" github-mcp-server stdio"],
      "enabled": true
    },
    "perplexity": {
      "type": "local",
      "command": ["bash", "-c", "source ~/.zenv_apikey_perplexity && mcp-server-perplexity-ask"],
      "enabled": true
    },
    "deepwiki": {
      "type": "remote",
      "url": "https://mcp.deepwiki.com/sse",
      "enabled": true
    },
    "context7": {
      "type": "local",
      "command": ["bash", "-c", "source ~/.zenv_apikey_context7 && context7-mcp"],
      "enabled": true
    }
  },
  "experimental": {
    "batch_tool": true
  }
}

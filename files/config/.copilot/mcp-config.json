{
  "mcpServers": {
    "perplexity": {
      "type": "local",
      "command": "sh",
      "args": ["-c", "source ~/.zenv_apikey_perplexity && deno run --allow-env --allow-net npm:server-perplexity-ask"],
      "tools": ["perplexity_ask"]
    },
    "deepwiki": {
      "type": "http",
      "url": "https://mcp.deepwiki.com/mcp",
      "tools": ["read_wiki_structure", "read_wiki_contents", "ask_question"]
    },
    "context7": {
      "type": "local",
      "command": "sh",
      "args": ["-c", "source ~/.zenv_apikey_context7 && deno run --allow-env --allow-net npm:@upstash/context7-mcp"],
      "tools": ["resolve-library-id", "get-library-docs"]
    },
    "grep": {
      "type": "http",
      "url": "https://mcp.grep.app",
      "tools": ["searchGitHub"]
    }
  }
}

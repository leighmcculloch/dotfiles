{
  "mcpServers": {
    "github": {
      "type": "stdio",
      "command": "sh",
      "args": [ "-c", "source ~/.zenv_apikey_github && github-mcp-server stdio" ]
    },
    "perplexity": {
      "type": "stdio",
      "command": "sh",
      "args": [ "-c", "source ~/.zenv_apikey_perplexity && deno run --allow-env --allow-net npm:server-perplexity-ask" ]
    },
    "deepwiki": {
      "type": "sse",
      "url": "https://mcp.deepwiki.com/sse"
    },
    "context7": {
      "type": "stdio",
      "command": "sh",
      "args": [ "-c", "source ~/.zenv_apikey_context7 && deno run --allow-env --allow-net npm:@upstash/context7-mcp" ]
    }
  }
}

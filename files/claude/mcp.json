{
  "mcpServers": {
    "github": {
      "type": "stdio",
      "command": "sh",
      "args": [ "-c", "source ~/.zenv_apikey_github && github-mcp-server stdio" ]
    },
    "perplexity": {
      "type": "stdio",
      "command": "sh",
      "args": [ "-c", "source ~/.zenv_apikey_perplexity && deno run --allow-env --allow-net npm:server-perplexity-ask" ]
    },
    "deepwiki": {
      "type": "sse",
      "url": "https://mcp.deepwiki.com/sse"
    },
    "context7": {
      "type": "stdio",
      "command": "sh",
      "args": [ "-c", "source ~/.zenv_apikey_context7 && deno run --allow-env --allow-net npm:@upstash/context7-mcp" ]
    },
    "memory": {
      "type": "stdio",
      "command": "npx",
      "args": [ "-y", "@modelcontextprotocol/server-memory" ],
      "env": {
        "MEMORY_FILE_PATH": "~/.dotfiles/files/claude/memory.json"
      }
    },
    "sequential-thinking": {
      "type": "stdio",
      "command": "npx",
      "args": [ "-y", "@modelcontextprotocol/server-sequential-thinking" ]
    },
    "chrome-devtools": {
      "type": "stdio",
      "command": "deno",
      "args": [ "run", "-A", "npm:chrome-devtools-mcp@latest" ]
    },
    "lsp-rust": {
      "type": "stdio",
      "command": "go",
      "args": [ "run", "github.com/isaacphi/mcp-language-server@v0.1.1", "-workspace", ".", "-lsp", "rust-analyzer", "--" ]
    },
    "lsp-go": {
      "type": "stdio",
      "command": "go",
      "args": [ "run", "github.com/isaacphi/mcp-language-server@v0.1.1", "-workspace", ".", "-lsp", "gopls", "--" ]
    },
    "lsp-deno": {
      "type": "stdio",
      "command": "go",
      "args": [ "run", "github.com/isaacphi/mcp-language-server@v0.1.1", "-workspace", ".", "-lsp", "deno", "--", "lsp" ]
    },
    "lsp-json": {
      "type": "stdio",
      "command": "go",
      "args": [ "run", "github.com/isaacphi/mcp-language-server@v0.1.1", "-workspace", ".", "-lsp", "vscode-json-language-server", "--", "--stdio" ]
    },
    "lsp-markdown": {
      "type": "stdio",
      "command": "go",
      "args": [ "run", "github.com/isaacphi/mcp-language-server@v0.1.1", "-workspace", ".", "-lsp", "vscode-markdown-language-server", "--", "--stdio" ]
    }
  }
}

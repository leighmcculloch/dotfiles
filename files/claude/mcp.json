{
  "mcpServers": {
    "github": {
      "type": "http",
      "url": "https://api.githubcopilot.com/mcp",
      "headers": {
        "Authorization": "Bearer ${GITHUB_TOKEN}"
      }
    },
    "perplexity": {
      "type": "stdio",
      "command": "npx",
      "args": [ "-y", "server-perplexity-ask" ]
    },
    "deepwiki": {
      "type": "sse",
      "url": "https://mcp.deepwiki.com/sse"
    },
    "context7": {
      "type": "stdio",
      "command": "deno",
      "args": [
        "run",
        "--allow-env=CONTEXT7_API_KEY,CLIENT_IP_ENCRYPTION_KEY,NODE_V8_COVERAGE,UNDICI_NO_FG,JEST_WORKER_ID,HTTPS_PROXY,https_proxy,HTTP_PROXY,http_proxy,NO_DEPRECATION,TRACE_DEPRECATION",
        "--allow-net",
        "npm:@upstash/context7-mcp"
      ]
    },
    "memory": {
      "type": "stdio",
      "command": "npx",
      "args": [ "-y", "@modelcontextprotocol/server-memory" ],
      "env": {
        "MEMORY_FILE_PATH": "~/.dotfiles/files/claude/memory.json"
      }
    },
    "sequential-thinking": {
      "type": "stdio",
      "command": "npx",
      "args": [ "-y", "@modelcontextprotocol/server-sequential-thinking" ]
    },
    "chrome-devtools": {
      "type": "stdio",
      "command": "deno",
      "args": [ "run", "-A", "npm:chrome-devtools-mcp@latest" ]
    },
    "lsp-rust": {
      "type": "stdio",
      "command": "go",
      "args": [ "run", "github.com/isaacphi/mcp-language-server@v0.1.1", "-workspace", ".", "-lsp", "rust-analyzer", "--" ]
    },
    "lsp-go": {
      "type": "stdio",
      "command": "go",
      "args": [ "run", "github.com/isaacphi/mcp-language-server@v0.1.1", "-workspace", ".", "-lsp", "gopls", "--" ]
    },
    "lsp-deno": {
      "type": "stdio",
      "command": "go",
      "args": [ "run", "github.com/isaacphi/mcp-language-server@v0.1.1", "-workspace", ".", "-lsp", "deno", "--", "lsp" ]
    },
    "lsp-json": {
      "type": "stdio",
      "command": "go",
      "args": [ "run", "github.com/isaacphi/mcp-language-server@v0.1.1", "-workspace", ".", "-lsp", "vscode-json-language-server", "--", "--stdio" ]
    },
    "lsp-markdown": {
      "type": "stdio",
      "command": "go",
      "args": [ "run", "github.com/isaacphi/mcp-language-server@v0.1.1", "-workspace", ".", "-lsp", "vscode-markdown-language-server", "--", "--stdio" ]
    }
  }
}

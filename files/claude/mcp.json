{
  "mcpServers": {
    "github": {
      "type": "stdio",
      "command": "bash",
      "args": [ "-c", "source ~/.zenv_apikey_github_ro ; source ~/.zenv_apikey_github ; GITHUB_PERSONAL_ACCESS_TOKEN=\"$GITHUB_TOKEN\" github-mcp-server stdio" ]
    },
    "perplexity": {
      "type": "stdio",
      "command": "bash",
      "args": [ "-c", "source ~/.zenv_apikey_perplexity && mcp-server-perplexity-ask" ]
    },
    "deepwiki": {
      "type": "sse",
      "url": "https://mcp.deepwiki.com/sse"
    },
    "context7": {
      "type": "stdio",
      "command": "bash",
      "args": [ "-c", "source ~/.zenv_apikey_context7 && context7-mcp" ]
    }
  }
}
